<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temporizzatore Numerico</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        #output {
            margin-top: 20px;
        }
    </style>
</head>
<body>

<h1>Temporizzatore Numerico</h1>
<button id="startButton">Inizia</button>
<div id="output"></div>

<script>
    function isPrime(num) {
        if (num <= 1) return false;
        for (let i = 2; i <= Math.sqrt(num); i++) {
            if (num % i === 0) return false;
        }
        return true;
    }

    function generateRandomNumber() {
        const num = Math.floor(Math.random() * 1000) + 1;
        const output = document.getElementById('output');
        
        output.innerHTML = `<h2>Numero Generato: ${num}</h2>`;
        output.innerHTML += `<p>${num} è ${num % 2 === 0 ? 'pari' : 'dispari'}</p>`;
        output.innerHTML += `<p>${num} ${isPrime(num) ? 'è' : 'non è'} un numero primo.</p>`;
        output.innerHTML += `<p>Il doppio di ${num} è ${num * 2}</p>`;
        output.innerHTML += `<p>La metà di ${num} è ${Math.floor(num / 2)}</p>`;
        output.innerHTML += `<p>Il complemento di ${num} rispetto a 1000 è ${1000 - num}</p>`;
        output.innerHTML += `<p>Somma di ${num}, ${num-1} e ${num+1} è ${num + (num-1) + (num+1)}</p>`;
        output.innerHTML += `<p>${num} * 3.14 = ${num * 3.14}</p>`;
    }

    document.getElementById('startButton').addEventListener('click', function() {
        setInterval(generateRandomNumber, 5000);
    });
</script>

</body>
</html>
