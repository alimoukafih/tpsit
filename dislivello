<body>

    <div class="box">
        <h2>Calcola Dislivello Trekking</h2>
        
        <!-- Input form -->
        <input type="number" id="partenza" placeholder="Partenza (m)" required>
        <input type="number" id="pausa" placeholder="Pausa (m)" required>
        <input type="number" id="arrivo" placeholder="Arrivo (m)" required>

        <button onclick="calcolaDislivello()">Calcola</button>

        <!-- Risultato -->
        <div class="result" id="result"></div>
    </div>

    <script>
        function calcolaDislivello() {
            const partenza = parseFloat(document.getElementById('partenza').value);
            const pausa = parseFloat(document.getElementById('pausa').value);
            const arrivo = parseFloat(document.getElementById('arrivo').value);

            // Verifica che tutti i campi siano validi
            if (isNaN(partenza) || isNaN(pausa) || isNaN(arrivo)) {
                alert('Inserisci valori validi!');
                return;
            }

            const dislivelloTotale = Math.abs(pausa - partenza) + Math.abs(arrivo - pausa);

            // Mostra il risultato
            document.getElementById('result').innerHTML = `
                <p>Dislivello Totale: <strong>${dislivelloTotale} m</strong></p>
            `;
        }
    </script>

